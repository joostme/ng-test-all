{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "test-lib-a": [
        "dist/test-lib-a"
      ],
      "test-lib-a/*": [
        "dist/test-lib-a/*"
      ],
      "test-lib-b": [
        "dist/test-lib-b"
      ],
      "test-lib-b/*": [
        "dist/test-lib-b/*"
      ]
    }
  }
}